  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/webidl2": "^24.4.3",
    "bikeshed-to-ts": "github:toji/bikeshed-to-ts#a8f58349cc047646bdfd7311a7c9050a2c802a7a",
